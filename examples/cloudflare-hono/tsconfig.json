{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "target": "esnext",
    "lib": ["esnext", "webworker", "dom"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": [
      "@cloudflare/workers-types"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test"]
}
